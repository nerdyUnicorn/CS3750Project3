extends layout

block content
    head
        // Game Javascript
        script(src="https://code.jquery.com/jquery-1.10.2.min.js")
        script(src='/javascripts/game.js')
        script(src="socket.io/socket.io.js")
        link(rel='stylesheet', href='/stylesheets/style.css')
    .container
        input.userName(type="hidden" value=user)
        

        div.roomPage
            h1.roomTitle Room Page
        div.startPage
            h1 Join or Create a Room
            h2.user Try
            input.room#newRoomText(type="text" placeholder="New Room")
            button.room#newRoomButton Create New Room
            input.room#joinRoomText(type="text" placeholder="Join Room")
            button.room#joinRoomButton Join Room
            button.room#seeRoomsButton See Room
            div.rooms
            
        

        include ./includes/messages.pug

