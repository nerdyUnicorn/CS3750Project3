extends layout

block content
    head
        // Game Javascript
        script(src="https://code.jquery.com/jquery-1.10.2.min.js")
        script(src='/javascripts/game.js')
        script(src="socket.io/socket.io.js")
        link(rel='stylesheet', href='/stylesheets/style.css')
    .container
        input.userName(type="hidden" value=user)
        input#room(type="hidden")

        div.roomName
            h1#roomNameTitle
        

        div.roomPage
            h1.roomTitle
            h3.timer

        div.answersPage
            h1.questionTitle

        div.reviewAnswers


        div.answerQuestion
            h1.chosenQuestion
            input.myAnswer(type="text" placeholder="Answer")
            button#sendMyAnswer Send My Answer

        div.chooseQuestions
            
        div.startPage
            h1 Join or Create a Game
            h5.startError
            
            
            input.room#joinRoomText(type="text" placeholder="Join Room")
            button.room#joinRoomButton Join Room
            //button.room#seeRoomsButton See Room

            button.room#newGameButton Create New Game
            div.rooms
        
        div.createRoomPage
            h1 Create a New Game
            h5.createRoomError
            div.formGroup
                label.newName Game Room Name
                input#newNameText(type='text', placeholder='Game Name')
            div.formGroup
                label.newPlayers Number of Players
                input#newPlayersText(type='number', placeholder='Number of Players')
            div.formGroup
                label.newRounds Number of Rounds
                input#newRoundsText(type='number', placeholder='Number of Rounds')
            div.formGroup
                div.categories
                    label Category:
                    input#allCategories(type='checkbox', name='category' value='All')
                    label All
                    input#definitions(type='checkbox', name='category' value='Definitions' checked)
                    label Definitions
                    input#famousPeople(type='checkbox', name='category' value='Famous People')
                    label Famous People
                    input#acronyms(type='checkbox', name='category' value='Acronyms')
                    label Acronyms
                    input#movieHeadlines(type='checkbox', name='category' value='Movie Headlines')
                    label Movie Headlines
                    input#ludicrousLaws(type='checkbox', name='category' value='Ludicrous Laws')
                    label Ludicrous Laws
            div.formGroup
                button.room#newRoomButton Create New Game

        div.endGame
            //h1(style="position:absolute; top:120px; left:525px") Game Ended!!

            img(style="position:absolute; top:200px; right:610px" src="C:\Users\Owner\CS3750Project3\bin\thWCCKGJ8R.jpg")

            h2.gameWinner

            h2(style="position:absolute; top: 200px; left: 175px") Scores
            div.finalScores(style="width:150px; height:300; border:3px solid green;")
                

            //h2(style="position:absolute; top: 450px; right: 600px") Who guessed who's answers
            //div.answerGuessed(style="position:absolute; top:510px; right: 720px; width:150px; height:300; border:3px solid green;")
                

            
            //h2(style="position:absolute; top: 200px; right: 100px") Number of correct answers
            //div.correctGuess(style="position:absolute; top:40px; right: 100px; width:150px; height:300; border:3px solid green;")
                

            <h2 style="position:absolute; top:800px; left: 150px"> 

            button.btn.btn-primary#restartGame(type= 'submit') restartGame

            
        

        include ./includes/messages.pug

